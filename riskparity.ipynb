   "source": [
    "import numpy as np\n",
    "import pandas as pd\n",
    "import yfinance as yf\n",
    "import matplotlib.pyplot as plt\n",
    "from scipy.optimize import minimize \n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 14,
   "id": "140da3d6",
   "metadata": {},
   "outputs": [],
   "source": [
    "# -- RISK PARITY WITH ASSET ALLOCATION -- "
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 3,
   "id": "d7269cd6",
   "metadata": {},
   "outputs": [
    {
     "name": "stderr",
     "output_type": "stream",
     "text": [
      "[*********************100%***********************]  3 of 3 completed\n"
     ]
    }
   ],
   "source": [
    "tickers = [\"^GSPC\",\"GLD\",\"BLGBX\"]\n",
    "data = yf.download(tickers,interval='1mo',period='15y',auto_adjust=True)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 4,
   "id": "bc02be45",
   "metadata": {},
   "outputs": [],
   "source": [
    "prices = data['Close']\n",
    "returns = prices.pct_change().dropna()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 5,
   "id": "62657e37",
   "metadata": {},
   "outputs": [],
   "source": [
    "cov_matrix = returns.cov() * 12\n",
    "num_assets = len(tickers)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 15,
   "id": "f9e7d2f9",
   "metadata": {},
   "outputs": [],
   "source": [
    "def portfolio_vol(weights,cov_matrix):\n",
    "\n",
    "    std_dev=np.sqrt(np.dot(weights.T,np.dot(cov_matrix,weights)))\n",
    "\n",
    "    return std_dev\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 7,
   "id": "5e80b65b",
   "metadata": {},
   "outputs": [],
   "source": [
    "def  rc_calculator(weights, cov_matrix):\n",
    "\n",
    "    p_vol = portfolio_vol(weights, cov_matrix)\n",
    "\n",
    "    # Marginal Risk Contribution (MRC)\n",
    "    cov_dot_w = np.dot(cov_matrix, weights) \n",
    "    mrc = cov_dot_w / p_vol\n",
    "\n",
    "    rc = weights * mrc\n",
    "\n",
    "    return rc\n",
    "    "
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 8,
   "id": "1618253c",
   "metadata": {},
   "outputs": [],
   "source": [
    "def sum_calculator(weights,cov_matrix):\n",
    "\n",
    "    rc = rc_calculator(weights, cov_matrix)\n",
    "    target_rc = np.mean(rc)\n",
    "\n",
    "    error = np.sum((rc-target_rc)**2)\n",
    "\n",
    "    return error"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 12,
   "id": "be5d6c1a",
   "metadata": {},
   "outputs": [],
   "source": [
    "def weight_calculator(cov_matrix):\n",
    "\n",
    "    n = cov_matrix.shape[0]\n",
    "    initial_guess = np.repeat(1/n, n)\n",
    "\n",
    "    constraints = ({'type': 'eq', 'fun': lambda x: np.sum(x) - 1.0})\n",
    "\n",
    "    bounds = tuple((0.0, 1.0) for _ in range(n))\n",
    "\n",
    "    result = minimize(fun=sum_calculator,\n",
    "                      x0=initial_guess,\n",
    "                      args=(cov_matrix,),\n",
    "                      method='SLSQP',\n",
    "                      bounds=bounds,\n",
    "                      constraints=constraints,\n",
    "                      options={'ftol': 1e-12, 'maxiter': 1000})\n",
    "    \n",
    "    return result.x"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 13,
   "id": "847def1f",
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "The Risk Parity results are:\n",
      "   Asset  Weight  Risk Contribution  % of Total Risk\n",
      "0  ^GSPC  0.3032             0.0310           0.3333\n",
      "1    GLD  0.3104             0.0310           0.3333\n",
      "2  BLGBX  0.3864             0.0310           0.3333\n",
      "----------------------------------------\n",
      "Total Portfolio Volatility: 0.0929\n"
     ]
    }
   ],
   "source": [
    "optimal_weights = weight_calculator(cov_matrix)\n",
    "\n",
    "print(\"The Risk Parity results are:\")\n",
    "\n",
    "final_rc = rc_calculator(optimal_weights, cov_matrix)\n",
    "total_risk = portfolio_vol(optimal_weights, cov_matrix)\n",
    "\n",
    "results_df = pd.DataFrame({\n",
    "    'Asset': tickers,\n",
    "    'Weight': optimal_weights,\n",
    "    'Risk Contribution': final_rc,\n",
    "    '% of Total Risk': final_rc / total_risk\n",
    "})\n",
    "\n",
    "pd.options.display.float_format = '{:.4f}'.format\n",
    "print(results_df)\n",
    "print(\"-\" * 40)\n",
    "print(f\"Total Portfolio Volatility: {total_risk:.4f}\")"
   ]
  },
